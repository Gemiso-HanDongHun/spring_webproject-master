    <!--  댓글 목록 조회  -->
    <select id="findAll" resultMap="replyMap">
        SELECT  *
        FROM tbl_reply
        WHERE board_no = #{boardNo}
        ORDER BY reply_no
        LIMIT #{page.start}, #{page.amount}
    </select>

    <select id="getReplyCount" resultType="int">
        SELECT COUNT(*)
        FROM tbl_reply
        WHERE board_no=#{boardNo}
    </select>

</mapper>